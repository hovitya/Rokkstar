<rx:Skin xmlns:r="http://www.imagix-interactive/2012/Rokkstar" width="100%" height="200px" xmlns:rx="http://www.imagix-interactive/2012/Rokkstar/components">
    <r:states>
        <rx:State name="normal"/>
        <rx:State name="normalWithControlBar"/>
    </r:states>

    <rx:VisualComponent class="core_Panel_Background noSelect" top="0" left="0" right="0" bottom="0">
    </rx:VisualComponent>
    <rx:Group class="core_Panel_Content noSelect" top="1" left="1" right="1" bottom.normal="1" bottom.normalWithControlBar="51" id="content">
    </rx:Group>
    <rx:Group class="core_Panel_ControlBar noSelect" bottom="0" left="0" right="0" height="50px" id="controlBar" cssStyle.normal="{'display':'none'}" cssStyle.normalWithControlBar="{'display':'block'}">
        <r:layout>
            <rx:HorizontalLayout horizontalAlign="right" paddingRight="12" verticalAlign="middle" gap="5"/>
        </r:layout>
    </rx:Group>
</rx:Skin>