<rx:Skin xmlns:r="http://www.imagix-interactive/2012/Rokkstar"  width="100%" height="200px"
         xmlns:rx="http://www.imagix-interactive/2012/Rokkstar/components"
         xmlns:rg="core.graphics">
    <r:states>
        <r:State name="normal"/>
        <r:State name="normalWithControlBar"/>
    </r:states>
    <rg:Rectangle top="0" left="0" right="0" bottom="0" shadow="true" shadowOffsetX="1" shadowOffsetY="1" shadowBlur="8.0" corner="5">
        <r:stroke>
            <rg:SolidColorStroke color="#CCCCCC"/>
        </r:stroke>
        <r:fill>
            <rg:SolidColorFill color="#FFFFFF"/>
        </r:fill>
    </rg:Rectangle>
    <rg:Rectangle top="0" left="0" right="0" height="29px" corner="0" topLeftCorner="5" topRightCorner="5">
        <r:fill>
            <rg:LinearGradientFill>
                <rg:GradientStop ratio="0.0" color="#666666"/>
                <rg:GradientStop ratio="0.4" color="#606060"/>
                <rg:GradientStop ratio="0.41" color="#484848"/>
                <rg:GradientStop ratio="1.0" color="#333333"/>
            </rg:LinearGradientFill>
        </r:fill>
    </rg:Rectangle>
    <rx:Label text="" class="core_TitlePanel_Title" id="label" top="0" left="12" right="0" bottom="0"/>
    <rx:Group class="core_TitlePanel_Content noSelect" top="29" left="1" right="1" bottom.normal="1" bottom.normalWithControlBar="51" id="content">
    </rx:Group>
    <rg:Rectangle height="50px" left="0" right="0" bottom="0" corner="5" topLeftCorner="0" topRightCorner="0" visible.normal="false" visible.normalWithControlBar="true">
        <r:stroke>
            <rg:SolidColorStroke color="#CCCCCC"/>
        </r:stroke>
        <r:fill>
            <rg:SolidColorFill color="#F3F3F3"/>
        </r:fill>
    </rg:Rectangle>
    <rx:Group class="noSelect" bottom="0" left="0" right="0" height="50px" id="controlBar" visible.normal="true" visible.normalWithControlBar="false">
        <r:layout>
            <rx:HorizontalLayout horizontalAlign="right" paddingRight="12" verticalAlign="middle" gap="5"/>
        </r:layout>
    </rx:Group>
</rx:Skin>